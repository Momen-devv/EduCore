{
  "compilerOptions": {
    "target": "ES2021",                        
    "module": "commonjs",                      
    "moduleResolution": "node",                 
    "rootDir": "./src",                        
    "outDir": "./dist",                        
    "esModuleInterop": true,                    
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,                 
    "noImplicitAny": true,                     
    "strictNullChecks": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]                          
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
